/* USER CODE BEGIN 0 */

uint16_t* password = {1, 0, 1, 1, 0, 1, 0, 1}; // 1 - long, 0 - short
uint16_t btn_input, current_position = 0;
pushDownTimestamp;
bool isPushedDown = false;

void delay (uint32_t time) {
	HAL_Delay(time);
}

void togglePin (uint16_t pin) {
	switch (pin) {
			case 15:
				pin = GPIO_PIN_15;
				break;
			case 14:
				pin = GPIO_PIN_14;
				break;
			case 13:
				pin = GPIO_PIN_13;
				break;
			default: return;
		}
	HAL_GPIO_TogglePin(GPIOD, gpio_pin);
}

void blink (char type, uint32_t delay_time, uint16_t blinks_amount) {
	isBlinking = true;
	uint16_t pin;
	switch (type) {
		case 'r':
			pin = 15;
			break;
		case 'y':
			pin = 14;
			break;
		case 'g':
			pin = 13;
			break;
		default: return;
	}
	for (uint16_t i = 0; i < blinks_amount; i++) {
		togglePin(pin);
		delay(delay_time);
		togglePin(pin);
		delay(delay_time);
	}
}

void block () {
	current_position = 0;
	isPushedDown = false;
	blink('r', 350, 6);
}

uint16_t checkBtn () {
	isPushedDown = false;
	if (btn_input == password[current_position]) {
		current_position++;
		if (current_position == 8) {
			blink('g', 350, 10);
			current_position = 0;
		} else {
			blink('y', 250, 3);
		}
	} else {
		block();
	}
}

bool checkTime () {
	// TODO check time
	return true;
}

